<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradientbackground"
    android:id="@+id/intro"
    tools:context=".SignUpIntro">


    <TextView
        android:id="@+id/introMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="67dp"
        android:gravity="center_horizontal"
        android:text="Here's how it works: Step on your Sanity Scale and wait for either the blue check to appear or until you hear the scale emit a calm tone to indicate that it has measured your body weight."
        android:textColor="#FFFFFF"
        android:textSize="40sp" />

    <Button
        android:id="@+id/nextBtn"
        android:layout_width="82dp"
        android:layout_height="38dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="51dp"
        android:layout_marginRight="51dp"
        android:layout_marginBottom="39dp"
        android:background="@drawable/next"
        tools:layout_editor_absoluteX="288dp"
        tools:layout_editor_absoluteY="655dp" />
</RelativeLayout>